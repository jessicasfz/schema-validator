{
    "definitions": {},
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://example.com/root.json",
    "type": "object",
    "title": "The Root Schema",
    "required": [
      "fields"
    ],
    "properties": {
      "fields": {
        "$id": "#/properties/fields",
        "type": "array",
        "title": "The Fields Schema",
        "items": {
          "$id": "#/properties/fields/items",
          "type": "object",
          "title": "The Items Schema",
          "required": [
            "name",
            "title",
            "constraints"
          ],
          "properties": {
            "name": {
              "$id": "#/properties/fields/items/properties/name",
              "type": "string",
              "title": "The Name Schema",
              "default": "",
              "examples": [
                "Currency"
              ],
              "pattern": "^(.*)$"
            },
            "title": {
              "$id": "#/properties/fields/items/properties/title",
              "type": "string",
              "title": "The Title Schema",
              "default": "",
              "examples": [
                "currency abbreviation"
              ],
              "pattern": "^(.*)$"
            },
            "constraints": {
              "$id": "#/properties/fields/items/properties/constraints",
              "type": "object",
              "title": "The Constraints Schema",
              "required": [
                "required",
                "type",
                "pattern",
                "nullable",
                "minLength",
                "maxLength"
              ],
              "properties": {
                "required": {
                  "$id": "#/properties/fields/items/properties/constraints/properties/required",
                  "type": "boolean",
                  "title": "The Required Schema",
                  "default": false,
                  "examples": [
                    true
                  ]
                },
                "type": {
                  "$id": "#/properties/fields/items/properties/constraints/properties/type",
                  "enum": ["string","number","integer","date","time","date-time","email","boolean"],
                  "title": "The Type Schema",
                  "default": "",
                  "examples": [
                    "string"
                  ],
                  "pattern": "^(.*)$"
                },
                "pattern": {
                  "$id": "#/properties/fields/items/properties/constraints/properties/pattern",
                  "type": "string",
                  "title": "The Pattern Schema",
                  "default": "",
                  "examples": [
                    "[a-zA-Z]*"
                  ],
                  "pattern": "^(.*)$"
                },
                "nullable": {
                  "$id": "#/properties/fields/items/properties/constraints/properties/nullable",
                  "type": "boolean",
                  "title": "The Nullable Schema",
                  "default": false,
                  "examples": [
                    false
                  ]
                },
                "minLength": {
                  "$id": "#/properties/fields/items/properties/constraints/properties/minLength",
                  "type": "integer",
                  "title": "The Minlength Schema",
                  "default": 0,
                  "examples": [
                    3
                  ]
                },
                "maxLength": {
                  "$id": "#/properties/fields/items/properties/constraints/properties/maxLength",
                  "type": "integer",
                  "title": "The Maxlength Schema",
                  "default": 0,
                  "examples": [
                    3
                  ]
                }
              }
            }
          }
        }
      }
    }
  }